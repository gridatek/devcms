import { Component, OnInit } from '@angular/core';
import { CommonModule } from '@angular/common';
import { RouterModule } from '@angular/router';
import { Meta, Title } from '@angular/platform-browser';

@Component({
  selector: 'app-products',
  standalone: true,
  imports: [CommonModule, RouterModule],
  template: `
    <div class="max-w-6xl mx-auto px-4 py-8">
      <header class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">
          Products
        </h1>
        <p class="text-xl text-gray-600">
          Discover our range of products and services.
        </p>
      </header>

      <% if (products.length > 0) { %>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% products.forEach(product => { %>
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <% if (product.featured_image) { %>
          <div class="aspect-w-16 aspect-h-9">
            <img
              src="<%= product.featured_image %>"
              alt="<%= product.name %>"
              class="w-full h-48 object-cover"
            />
          </div>
          <% } %>

          <div class="p-6">
            <h2 class="text-xl font-bold text-gray-900 mb-2">
              <a
                routerLink="/products/<%= product.slug %>"
                class="hover:text-blue-600 transition-colors"
              >
                <%= product.name %>
              </a>
            </h2>

            <% if (product.description) { %>
            <p class="text-gray-600 mb-4 line-clamp-3">
              <%= product.description %>
            </p>
            <% } %>

            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-2">
                <% if (product.sale_price && product.sale_price < product.price) { %>
                <span class="text-lg font-bold text-red-600">$<%= product.sale_price %></span>
                <span class="text-sm text-gray-500 line-through">$<%= product.price %></span>
                <% } else { %>
                <span class="text-lg font-bold text-gray-900">$<%= product.price %></span>
                <% } %>
              </div>

              <% if (product.stock_quantity > 0) { %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                In Stock
              </span>
              <% } else { %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                Out of Stock
              </span>
              <% } %>
            </div>

            <% if (product.sku) { %>
            <p class="text-xs text-gray-500 mt-2">SKU: <%= product.sku %></p>
            <% } %>

            <div class="mt-4">
              <a
                routerLink="/products/<%= product.slug %>"
                class="w-full bg-blue-600 text-white text-center py-2 px-4 rounded-md hover:bg-blue-700 transition-colors block"
              >
                View Details
              </a>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
      <% } else { %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No products available</h3>
        <p class="mt-1 text-sm text-gray-500">Check back later for new products.</p>
      </div>
      <% } %>
    </div>
  `,
  styles: [`
    .line-clamp-3 {
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .aspect-w-16 {
      position: relative;
      padding-bottom: 56.25%;
    }

    .aspect-w-16 img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  `]
})
export class ProductsComponent implements OnInit {
  products = [
    <% products.forEach((product, index) => { %>
    {
      id: '<%= product.id %>',
      name: '<%= product.name.replace(/'/g, "\\'") %>',
      slug: '<%= product.slug %>',
      description: '<%= (product.description || "").replace(/'/g, "\\'") %>',
      price: <%= product.price || 0 %>,
      sale_price: <%= product.sale_price || null %>,
      sku: '<%= product.sku || "" %>',
      stock_quantity: <%= product.stock_quantity || 0 %>,
      status: '<%= product.status %>',
      featured_image: '<%= product.featured_image || "" %>'
    }<%= index < products.length - 1 ? ',' : '' %>
    <% }); %>
  ];

  constructor(
    private meta: Meta,
    private title: Title
  ) {}

  ngOnInit(): void {
    this.setSEO();
  }

  private setSEO(): void {
    this.title.setTitle('Products | <%= site.name %>');
    this.meta.updateTag({
      name: 'description',
      content: 'Discover our range of products and services.'
    });

    // Open Graph tags
    this.meta.updateTag({ property: 'og:title', content: 'Products | <%= site.name %>' });
    this.meta.updateTag({
      property: 'og:description',
      content: 'Discover our range of products and services.'
    });
    this.meta.updateTag({ property: 'og:type', content: 'website' });
  }
}